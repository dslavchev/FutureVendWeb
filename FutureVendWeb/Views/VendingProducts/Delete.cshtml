@model FutureVendWeb.Data.Models.VendingProducts.GetVendingProductModel

@{
    ViewData["Title"] = "Delete Product";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this product?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">PLU</dt>
        <dd class="col-sm-9">@Model.PLU</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.Category</dd>
    </dl>
</div>

<form asp-action="DeleteVendingProduct" method="post" class="mt-3">
    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger">
            @ViewData["Error"]
        </div>
    }

    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
