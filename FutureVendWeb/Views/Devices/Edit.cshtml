@model FutureVendWeb.Data.Models.Device.EditDeviceModel

@{
    ViewData["Title"] = "Edit Device";
}

<h2>Edit Device</h2>

<form asp-action="Edit" method="post">
    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger">
            @ViewData["Error"]
        </div>
    }

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="PaymentDeviceId" class="control-label">Payment Device</label>
        <select asp-for="PaymentDeviceId" class="form-control" asp-items="Model.PaymentDevices">
            <option value="">-- Select Payment Device --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="VendingDeviceId" class="control-label">Vending Device</label>
        <select asp-for="VendingDeviceId" class="form-control" asp-items="Model.VendingDevices">
            <option value="">-- Select Vending Device --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CustomerId" class="control-label">Customer</label>
        <select asp-for="CustomerId" class="form-control" asp-items="Model.Customer">
            <option value="">-- Select Customer --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="PaymentDeviceSerial" class="control-label"></label>
        <input asp-for="PaymentDeviceSerial" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="VendingDeviceSerial" class="control-label"></label>
        <input asp-for="VendingDeviceSerial" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AcceptCard" class="control-label"></label>
        <input asp-for="AcceptCard" class="form-check-input" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="AcceptCash" class="control-label"></label>
        <input asp-for="AcceptCash" class="form-check-input" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="LocationLat" class="control-label"></label>
        <input asp-for="LocationLat" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LocationLon" class="control-label"></label>
        <input asp-for="LocationLon" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
