@model List<FutureVendWeb.Data.Models.Device.GetAllDevicesWithViewModel>

@{
    ViewData["Title"] = "All Devices";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add New Device</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer Information</th>
            <th>Payment Device Information</th>
            <th>Vending Device Information</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var device in Model)
        {
            <tr>
                <td>@device.CustomerInformation</td>
                <td>@device.PaymentDeviceInformation</td>
                <td>@device.VendingDeviceInformation</td>
                <td>
                    <a asp-action="Details" asp-route-id="@device.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@device.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@device.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
