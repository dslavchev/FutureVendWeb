@model FutureVendWeb.Data.Models.Transaction.GetTransactionModel

@{
    ViewData["Title"] = "Transaction Details";
}

<h1>Transaction Details</h1>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

        <dt class="col-sm-3">Currency</dt>
        <dd class="col-sm-9">@Model.Currency</dd>

        <dt class="col-sm-3">Payment Type</dt>
        <dd class="col-sm-9">@Model.PaymentType</dd>

        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>

        <dt class="col-sm-3">Device Info</dt>
        <dd class="col-sm-9">@Model.DeviceInformation</dd>

        <dt class="col-sm-3">Vending Product</dt>
        <dd class="col-sm-9">@Model.VendingProductInformation</dd>

        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.CustomerInformation</dd>
    </dl>
</div>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
