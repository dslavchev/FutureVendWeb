@using FutureVendWeb.Data.Models.PaymentDevice
@model GetPaymentDeviceModel

@{
    ViewData["Title"] = "Edit Payment Device";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger">
            @ViewData["Error"]
        </div>
    }

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Manufacturer"></label>
        <input asp-for="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OSVersion"></label>
        <input asp-for="OSVersion" class="form-control" />
        <span asp-validation-for="OSVersion" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="NFC" class="form-check-input" />
        <label asp-for="NFC" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="Chip" class="form-check-input" />
        <label asp-for="Chip" class="form-check-label"></label>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
