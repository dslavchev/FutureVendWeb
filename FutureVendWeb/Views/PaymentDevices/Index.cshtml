@using FutureVendWeb.Data.Models.PaymentDevice
@model List<GetAllPaymentDevicesViewModel>

@{
    ViewData["Title"] = "Payment Devices";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">Create New Payment Device</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Manufacturer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var device in Model)
        {
            <tr>
                <td>@device.Name</td>
                <td>@device.Manufacturer</td>
                <td>
                    <a asp-action="Details" asp-route-id="@device.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@device.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@device.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
