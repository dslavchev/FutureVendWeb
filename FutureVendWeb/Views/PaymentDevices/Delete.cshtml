@using FutureVendWeb.Data.Models.PaymentDevice
@model GetPaymentDeviceModel

@{
    ViewData["Title"] = "Delete Payment Device";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this device?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Manufacturer</dt>
    <dd class="col-sm-9">@Model.Manufacturer</dd>

    <dt class="col-sm-3">OS Version</dt>
    <dd class="col-sm-9">@Model.OSVersion</dd>

    <dt class="col-sm-3">NFC</dt>
    <dd class="col-sm-9">@Model.NFC</dd>

    <dt class="col-sm-3">Chip</dt>
    <dd class="col-sm-9">@Model.Chip</dd>
</dl>

<form asp-action="DeletePaymentDevice" method="post">
    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger">
            @ViewData["Error"]
        </div>
    }

    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
