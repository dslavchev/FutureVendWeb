@using FutureVendWeb.Data.Models.VendingDevices
@model GetVendingDeviceViewModel

@{
    ViewData["Title"] = "Edit Vending Device";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger">
            @ViewData["Error"]
        </div>
    }

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Manufacturer" class="control-label"></label>
        <input asp-for="Manufacturer" class="form-control" />
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoftwareVersion" class="control-label"></label>
        <input asp-for="SoftwareVersion" class="form-control" />
        <span asp-validation-for="SoftwareVersion" class="text-danger"></span>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
