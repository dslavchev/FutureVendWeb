@using FutureVendWeb.Data.Models.Customer
@model GetCustomerModel

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this customer?</h4>
<hr />
<dl class="row">

    <dt class="col-sm-3">Full Name</dt>
    <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

    <dt class="col-sm-3">Company Name</dt>
    <dd class="col-sm-9">@Model.CompanyName</dd>

    <dt class="col-sm-3">Tax Number</dt>
    <dd class="col-sm-9">@Model.TaxNumber</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>
</dl>

<form asp-action="DeleteCustomer" method="post">
    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger">
            @ViewData["Error"]
        </div>
    }

    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
