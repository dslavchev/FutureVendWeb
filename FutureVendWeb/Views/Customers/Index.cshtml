@using FutureVendWeb.Data.Models.Customer
@model List<GetAllCustomersWithViewModel>

@{
    ViewData["Title"] = "Customers";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add New Customer</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Company Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CompanyName</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
